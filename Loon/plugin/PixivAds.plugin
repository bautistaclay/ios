[Rule]
AND,((USER-AGENT,pixiv*), (NOT,((DOMAIN-SUFFIX,pximg.net))), (NOT,((DOMAIN-KEYWORD,pixiv)))),REJECT-IMG

[Script]
# > 去除Pixiv应用下方广告框
http-response ^https?:\/\/oauth\.secure\.pixiv\.net\/(auth\/token) script-path=https://raw.githubusercontent.com/bautistaclay/ios/master/Scripts/PixivAds.js, requires-body=true, timeout=60, tag=PixivAds, img-url=https://raw.githubusercontent.com/bautistaclay/ios/master/IconSet/App/Pixiv.png

[MITM]
hostname = oauth.secure.pixiv.net